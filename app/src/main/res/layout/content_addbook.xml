<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mahe.manipallibrary.addbook"
    tools:showIn="@layout/activity_addbook">

    <EditText
        android:id="@+id/createbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="73dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="book"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/createauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/createbook"
        android:layout_below="@+id/createbook"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="author"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/createdis"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/createauthor"
        android:layout_below="@+id/createauthor"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="description"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/insertbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createdis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="add"
        android:text="insertbook" />
</RelativeLayout>
